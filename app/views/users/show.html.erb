<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.profiles.each do |t| %>
    <%= t.name %>
    <%= t.birthday %>
    <%= t.blood %>
    <%= t.hobby %>
    <%= t.character %> 
    <%= image_tag t.image_url, size: "300x200"  if t.image? %>
  
<% end %>

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_profiles.each do |t| %>
    <%= t.name %>
    <%= t.birthday %>
      <%= t.blood %>
      <%= t.hobby %>
      <%= t.character %> 
    <%= image_tag t.image_url, size: "300x200"  if t.image? %>
<% end %>


<%= link_to "Tweet一覧に戻る", profiles_path %>